FROM hasura/graphql-engine:v2.7.0.cli-migrations-v3

WORKDIR /hasura

COPY ./migrations /hasura-migrations
COPY ./metadata /hasura-metadata

ARG PORT=8080
# should be false for prod
ARG HASURA_GRAPHQL_DEV_MODE="false"
# should be false to make the console a single source to manipulate DB
ARG HASURA_GRAPHQL_ENABLE_CONSOLE="false"
# must be set for production
ARG HASURA_GRAPHQL_ADMIN_SECRET=""
ARG HASURA_GRAPHQL_DATABASE_URL=""
ARG HASURA_GRAPHQL_METADATA_DATABASE_URL=""

ENV HASURA_GRAPHQL_SERVER_PORT=$PORT
ENV HASURA_GRAPHQL_CORS_DOMAIN="*"
ENV HASURA_GRAPHQL_DEV_MODE=$HASURA_GRAPHQL_DEV_MODE
ENV HASURA_GRAPHQL_ENABLED_LOG_TYPES="startup, http-log, webhook-log, websocket-log, query-log"
ENV HASURA_GRAPHQL_ENABLE_CONSOLE=$HASURA_GRAPHQL_ENABLE_CONSOLE
ENV HASURA_GRAPHQL_ADMIN_SECRET=$HASURA_GRAPHQL_ADMIN_SECRET
ENV HASURA_GRAPHQL_PG_TIMEOUT=60
ENV HASURA_GRAPHQL_DATABASE_URL=$HASURA_GRAPHQL_DATABASE_URL
ENV HASURA_GRAPHQL_METADATA_DATABASE_URL=$HASURA_GRAPHQL_METADATA_DATABASE_URL

